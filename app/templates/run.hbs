<main class="route run">
	<article>
		<section>
			<h3><i class="mdi mdi-stars"></i> Project</h3>
			<select onchange={{action 'selectProject' value="target.value"}}>
				{{#each model.projects as |project|}}
				<option value={{project}} selected={{if (eq project model.selectedProject) 'selected' }}>{{project}}</option>
				{{/each}}
			</select>
		</section>
		<section>
			<h3><i class="mdi mdi-folder"></i> Suite</h3>
			<select multiple="multiple" onchange={{action 'selectSuite' value="target"}}>
				{{#each model.suites as |suite|}}
				<option value={{suite}} selected={{if (contains suite model.selectedSuites) 'selected'}}>{{suite}}</option>
				{{/each}}
			</select>
		</section>
		<section>
			<h3><i class="mdi mdi-bug-report"></i>Test</h3>
			<select multiple="multiple" onchange={{action 'selectTest' value="target"}}>
				{{#each model.tests as |test|}}
				<option value={{test.id}} selected={{if (contains test model.selectedTests) 'selected'}}>{{test.name}}</option>
				{{/each}}
			</select>
		</section>
	</article>

